.collapse.hide.swap-success.template
  .border-success.card.mb-3
    .card-header(hidden) Swap tBTC for tBTC
    .card-body
      .text-center
        svg.checkmark(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 52 52")
          circle.checkmark__circle(cx="26", cy="26", r="25", fill="none")
          path.checkmark__check(fill="none", d="M14.1 27.2l7.1 7.2 16.7-16.8")
      .text-center
        strong Thanks for using Lightpay, your invoice has been paid in full!
      .all-details(hidden)
        h5.card-title.text-success Swap Complete!
        .card-text.collapse.invoice-details.show
          dl
            dt On-Chain
            dd
              span.chain-amount
              span #{' '}
              span.testnet-currency-qualifier t
              span.send-currency-code
            dt Transaction Id
            dd
              a(target="blank").text-muted.transaction-id
            dt Off-Chain
            dd
              span.send-amount
              span #{' '}
              span.testnet-currency-qualifier t
              span.send-currency-code
            dt Swap Fee
            dd
              span.swap-fee
              span #{' '}
              span.testnet-currency-qualifier t
              span.send-currency-code
              span #{' '}
              span (1.5%)
            .description
              dt Invoice
              dd
                i.fa.fa-quote-left.mr-1
                span #{' '}
                span.payment-description.mr-1
                span #{' '}
                i.fa.fa-quote-right
            dt Payment Proof
            dd
              code.payment-secret.text-muted
    .card-footer(hidden)
      .swap-date.text-muted

