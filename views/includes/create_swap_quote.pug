.bg-white.card.start-swap
  .card-body.pt-5.pl-5.pb-4.pr-5
    form.collapse.create-swap-quote.mb-4.show
      .swap-settings
        .form-group
          label
            .mb-3
              strong.text-secondary
                | Lightpay is a useful tool to pay for Lightning invoices with
                | any crypto currency wallet.
            .mb-4
              strong.text-secondary
                | Trade your on-chain coins for Lighting invoice payments!
          .input-group.input-group-lg.mb-3
            .input-group-prepend
              span.input-group-text
                i.fa.fa-fw.fa-bolt
            input.form-control.pay-to-lightning-invoice(
              autofocus,
              placeholder="Enter Lightning invoice to pay...",
              required,
              spellcheck="false",
              type="text"
            )
        .collapse.form-group.invoice-details
          .bg-light.card
            .card-body.pb-3
              .text-center
                img.mr-2.loading-fee(src="/img/loader.svg", style="width: 42px;")
                .fee-loaded.pb-1(hidden)
                  span.mr-2.text-muted Provider Fee:
                  strong
                    span.fee-amount 0.005
                    span #{' '}
                    span tBTC
              .mb-2(hidden)
                h4.card-title
                  span.send-amount
                  span #{' '}
                  span.testnet-currency-qualifier t
                  span.send-currency-code BTC
                  span #{' '}
                  span (
                  span.fiat-send-amount
                  span #{' '}
                  span.testnet-currency-qualifier t
                  span.fiat-currency-code USD
                  span )
                h6.card-subtitle.mb-2.text-muted
                  span to
                  span #{' '}
                  span.payment-public-key
                  a(href="#").destination-url.text-dark
                p.card-text.description
                  i.fa.fa-quote-left.mr-2.text-muted
                  span.payment-description.mr-2
                  i.fa.fa-quote-right.text-muted
        .collapse.form-group.hide.refund-address-entry
          label
            span Refund Address:
          .input-group.input-group-lg.mb-3
            .input-group-prepend
              span.input-group-text
                i.fa.fa-fw.fa-undo
            input.form-control.refund-address(
              autocomplete="off",
              placeholder="Enter a refund address...",
              spellcheck="false",
              type="text"
            )
          small.form-text.text-muted
            span Enter a
            span #{' '}
            span.required-address-type
              abbr.initialism(title="Pay to Public Key Hash (1xx)") p2pkh
              span #{' '}
              span or
              span #{' '}
              abbr.initialism(
                title="Pay to Witness Public Key Hash (bc)"
              ) p2pkh
            span #{' '}
            span.address-currency-label tBTC
            span #{' '}
            span
              | address with a private key you control to use for a refund if
              | things go wrong.
        button.btn.btn-block.btn-lg.btn-primary.disabled.make(style="background: rgba(79, 227, 193, 0.9); border-color: rgb(79, 227, 193)", type="submit")
          span.mr-2 Pay

